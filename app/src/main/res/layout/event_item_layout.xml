<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7sp"
    android:backgroundTint="@color/green4"
    app:cardCornerRadius="14sp"
    app:cardElevation="2sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/event_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="start"
            android:layout_marginStart="18sp"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="12sp"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:text="@string/category"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/event_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="start"
            android:layout_marginStart="18sp"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="12sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/event_category"
            app:layout_constraintBottom_toBottomOf="parent"

            android:text="@string/comment"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/event_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="start"
            android:layout_marginStart="18sp"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15dp"
            android:text="@string/RUB"

            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/event_expense"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="start"
            android:layout_marginStart="18sp"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="12sp"
            app:layout_constraintEnd_toStartOf="@id/event_currency"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="15dp"
            android:text="@string/_45"

            android:textColor="@color/black"
            android:textSize="20sp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>